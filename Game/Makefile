ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq ($(shell echo "test"), "test")
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = gcc
endif
ifeq ($(origin CXX), default)
  CXX = g++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
RESCOMP = windres
INCLUDES += -Iinclude -I../Engine/include -I../Vendor/include
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++23
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug_x64)
TARGETDIR = bin/Debug
TARGET = $(TARGETDIR)/Game
OBJDIR = bin/obj/Debug
DEFINES += -DDebug
LIBS += ../Engine/bin/Debug/libEngine.a
LDDEPS += ../Engine/bin/Debug/libEngine.a
ALL_LDFLAGS += $(LDFLAGS) -LVendor/libs -Lbin/Debug -L/usr/lib64 -m64

else ifeq ($(config),release_x64)
TARGETDIR = bin/Release
TARGET = $(TARGETDIR)/Game
OBJDIR = bin/obj/Release
DEFINES += -DRelease
LIBS += ../Engine/bin/Release/libEngine.a
LDDEPS += ../Engine/bin/Release/libEngine.a
ALL_LDFLAGS += $(LDFLAGS) -LVendor/libs -Lbin/Release -L/usr/lib64 -m64

